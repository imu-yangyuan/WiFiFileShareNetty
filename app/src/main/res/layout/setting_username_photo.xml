<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
            android:id="@+id/titleBar"
            layout="@layout/title_bar"
            android:layout_height="45dp"
            android:layout_width="match_parent"/>

    <LinearLayout
            android:id="@+id/setLayout"
            android:layout_below="@id/titleBar"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <com.yangyuan.wififileshareNio.UI.UIUtils.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:scaleType="centerCrop"
                app:border_width="1dp"
                app:border_color="#FFFFFFFF"
                android:src="@mipmap/head_portrait_1"
                android:id="@+id/Photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"/>

        <EditText
                android:maxLength="6"
                android:id="@+id/name"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/setLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/iv1"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/iv2"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/iv3"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/iv4"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/iv5"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/iv6"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/iv7"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_7"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/iv8"
                    android:layout_margin="2dp"
                    android:src="@mipmap/head_portrait_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <include
            layout="@layout/bottom_two_button"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>