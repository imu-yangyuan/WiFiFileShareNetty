<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/zhou_file_item"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/zhou_file_list_item_height"
        android:layout_height="@dimen/zhou_file_list_item_height"
        android:id="@+id/zhou_file_item_icon"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/zhou_file_list_item_height"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center|left"
        android:ellipsize="middle"
        android:maxLines="2"
        android:id="@+id/zhou_file_item_name"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zhou_file_item_check"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:focusable="false"
        android:layout_marginLeft="5dp"
        android:checked="false"/>


</LinearLayout>
